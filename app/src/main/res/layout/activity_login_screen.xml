<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".login.LoginScreen_akt"
    android:id="@+id/login_frame">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/flexicuLogo"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/flexicu_logo" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/emailInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Indtast email"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Indtast adgangskode"
        android:inputType="textPersonName|textPassword"
        android:layout_gravity="center"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_height="80dp"
        android:id="@+id/tilAnimation"
        android:layout_gravity="center"
        android:background="@color/hvid">
    </FrameLayout>

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_green"
        android:elevation="0dp"
        android:text="Log ind"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="35sp"
        />

    <Button
        android:id="@+id/newUser"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners_blue"
        android:text="Opret bruger"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="35sp"
        />

</LinearLayout>
</FrameLayout>