<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".login.LoginScreen_akt"
    android:id="@+id/login_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        android:background="@color/hvid"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/hvid"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fle_logo"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/fle_logo" />

            <ImageView
                android:id="@+id/x_logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:src="@drawable/x_logo" />

            <ImageView
                android:id="@+id/icu_logo"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icu_logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/loading_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textAlignment="center" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tilFragmenter_frame">

    </FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tilAnimation"
        android:layout_gravity="center"

        android:background="@color/hvid">
    </FrameLayout>

    <EditText
        android:layout_marginTop="200dp"
        android:id="@+id/emailInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Indtast email"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Indtast adgangskode"
        android:inputType="textPersonName|textPassword"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_green"
        android:elevation="0dp"
        android:text="Log ind"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="35sp"
        />

    <Button
        android:id="@+id/newUser"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corners_blue"
        android:text="Opret bruger"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="35sp"
        />


</LinearLayout>


</FrameLayout>