<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.flexicuv2.Indlejninger.Lej_filtrer"
    >

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:layout_width="210dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginVertical="10dp"
               android:background="@drawable/flexicu_logo"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Vælg ønskede arbejdsområde(r)"
               android:layout_marginVertical="10dp"/>

           <com.example.chris.flexicuv2.Indlejninger.MultiSelectionSpinner
               android:id="@+id/input1"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:layout_marginVertical="10dp"
               />

           <View
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginVertical="10dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="Hvornår mangler du arbejdskraft?"
           android:layout_marginVertical="10dp"

           />


           <CalendarView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:id="@+id/kalender"
               android:layout_marginVertical="10dp">

           </CalendarView>

           <View
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginVertical="10dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Arbejdets adresse"
               android:layout_marginVertical="10dp"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="10"
               android:layout_marginVertical="10dp"
               >

           <EditText
               android:layout_width="0dp"
               android:layout_weight="3"
               android:layout_height="wrap_content"
               android:hint="Postnr."
               android:inputType="number"
               android:gravity="center"
               android:maxLength="4"
               android:id="@+id/edit_postnr"
               />

           <EditText
               android:layout_width="0dp"
               android:layout_weight="7"
               android:layout_height="wrap_content"
               android:hint="By"
               android:inputType="text"
               android:gravity="center"
               android:maxLength="30"
               android:id="@+id/edit_by"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="10"
               android:layout_marginVertical="10dp">

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:layout_height="wrap_content"
                   android:hint="Vej"
                   android:inputType="text"
                   android:gravity="center"
                   android:maxLength="100"
                   android:id="@+id/edit_vej"
                   />

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="3"
                   android:layout_height="wrap_content"
                   android:hint="Nummer"
                   android:inputType="text"
                   android:gravity="center"
                   android:maxLength="10"
                   android:id="@+id/edit_nummer"/>

           </LinearLayout>

           <View
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginVertical="10dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Medbringes eget værktøj?"
               android:layout_marginVertical="10dp"
               />

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="100">

               <Space
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="30"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/ja_værktøj"
                   android:text="Ja"
                   android:layout_weight="20"
                   android:shadowColor="@color/flex_green"/>
               <Space
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="20"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/nej_værktøj"
                   android:text="Nej"
                   android:layout_weight="20"
                   android:shadowColor="@color/flex_green"
                   />
           </RadioGroup>

           <View
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginVertical="10dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Timepris"
               android:layout_marginVertical="10dp"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="4"
               android:layout_marginVertical="10dp">

               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:inputType="number"
                   android:id="@+id/min_timepris"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:hint="Min"/>

               <View
                   android:layout_width="15dp"
                   android:layout_gravity="center"
                   android:layout_height="1dp"
                   android:background="@android:color/darker_gray"
                   />

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:inputType="number"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:id="@+id/max_timepris"
                   android:hint="Max"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content"
               android:layout_marginVertical="10dp"
               android:layout_weight="5">

           <Space
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/hvid"
               android:background="@drawable/rounded_corners_grey"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:text="Annuller"/>

           <Space
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Anvend"
               android:layout_weight="1"
               android:background="@drawable/rounded_corners_blue"
               android:layout_gravity="center"
               android:textColor="@color/hvid"/>

           <Space
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           </LinearLayout>

       </LinearLayout>



   </ScrollView>

</FrameLayout>