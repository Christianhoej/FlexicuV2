<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ledige_recyclerview_listitem"
    android:background="@drawable/flex_green_rektangel"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ledige_navn"
            android:textSize="18dp"
            android:text="Medarbjederens navn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ledige_periode"
            android:textSize="18dp"
            android:text="02/01/19-18/01/19"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ledige_pris"
            android:textSize="18dp"
            android:text="Samlet pris"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ledige_værktøj"
            android:textSize="18dp"
            android:text="Værktøj"/>

    </LinearLayout>

</RelativeLayout>