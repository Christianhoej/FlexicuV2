<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medarbejdere.Opret_medarbejder_fragment_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_oplysninger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Oplysninger"
            android:textAlignment="center"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editText_tlf"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Tlf."
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView_arbejdsområder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arbejdsområder"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.example.chris.flexicuv2.hjælpeklasser.MultiSelectionSpinner
            android:id="@+id/arbejdsområde"
            android:layout_width="fill_parent"
            android:background="@drawable/flex_green_rektangel"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/textView_kommentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Kommentar"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_kommentar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:ems="10"
            android:hint="Evt. udlejKommentar"
            android:inputType="textLongMessage"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="5">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hvid"
                android:background="@drawable/rounded_corners_grey"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Tilbage"
                android:id="@+id/tilbage_medarbejdere2"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="opret"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_blue"
                android:layout_gravity="center"
                android:textColor="@color/hvid"
                android:id="@+id/opret_medarbejder"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>