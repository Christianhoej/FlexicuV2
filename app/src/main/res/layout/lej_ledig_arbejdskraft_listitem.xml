<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:id="@+id/lej_ledig_arbejdskraft_listitem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="15dp"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:outlineAmbientShadowColor="@color/flex_green"
        android:outlineSpotShadowColor="@color/flex_green"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/medarbejderNavn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Søren"
                android:textSize="18dp"

                android:gravity="left"/>

            <TextView
                android:id="@+id/periode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Periode: 1/12-30/12"
                android:layout_below="@+id/medarbejderNavn"/>
            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Løn: 30.000"
                android:layout_below="@+id/periode"/>
            <TextView
                android:id="@+id/workfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Smed"
                android:layout_below="@+id/salary"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>