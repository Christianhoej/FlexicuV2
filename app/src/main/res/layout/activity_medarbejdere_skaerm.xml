<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        tools:context="com.example.chris.flexicuv2.Medarbejdere_pakke.Medarbejdere_skaerm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/medarbejdere_frame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:srcCompat="@drawable/flexicu_logo"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="Medarbejdere"
                android:textAlignment="center"
                android:textSize="40sp" />

            <Button
                android:id="@+id/opret_medarbejder_knap"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/rounded_corners_blue"
                android:fontFamily="sans-serif"
                android:text="TilfÃ¸j ny medarbejder"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medarbejder_recyclerview"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tiltest"
                android:textSize="30dp"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vis popup"
                android:id="@+id/vispopup"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tilPopUp">

            </View>
        </LinearLayout>
    </FrameLayout>